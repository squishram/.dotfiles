(include "centre/music.yuck")

(defwindow centre_bar
  :geometry (
    geometry
    :x "0%"
    :y "1.5%"
    :width "15%"
    :height "4%"
    :anchor "top center"
  )
  :stacking "bg"
  :reserve (
    struts
    :distance "6%"
    :side "top"
  )
  :windowtype "dock"
  :wm-ignore false
  (box
    :class: "music"
    :valign "center"
    :halign "center"
    (music)
  )
)

