(include "centre/music.yuck")

(defwindow centre_bar
  :geometry (geometry
    :x "0px"
    :y "10px"
    :width "500px"
    :height "50px"
    :anchor "top center"
  )

  :stacking "bg"
  :reserve (struts
    :distance "60px"
    :side "top"
  )
  :windowtype "dock"
  :wm-ignore false

  (box
    :class: "music"
    :valign "center"
    :halign "center"
    (workspaces)
    (datime)
  )
)
