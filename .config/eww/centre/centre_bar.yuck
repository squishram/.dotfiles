(include "centre/music.yuck")

(defwindow centre_bar

  :windowtype "dock"
  :wm-ignore false
  :stacking "bg"

  :geometry (geometry
    :x "0px"
    :y "10px"
    :width "500px"
    :height "50px"
    :anchor "top center"
  )

  :reserve (struts
    :distance "60px"
    :side "top"
  )

  (box
    :class: "music"
    :valign "center"
    :halign "center"
    (workspaces)
  )
)
