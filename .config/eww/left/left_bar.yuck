(include "left/workspaces.yuck")

(defwindow left_bar
  :geometry (geometry
    :x "8px"
    :y "10px"
    :width "500px"
    :height "50px"
    :anchor "top left"
  )
  :stacking "bg"
  :reserve (
    struts
    :distance "6%"
    :side "top"
  )
  :windowtype "dock"
  :wm-ignore false

  (
    box
    :class: "status"
    :valign "center"
    :halign "center"
    (workspaces)
  )
)
