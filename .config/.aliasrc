# TASKWARRIOR ALIASES
# add a task
alias ta="task add $1"
# list your tasks
alias tl="task list"
# edit a task
alias te="task $1 edit"
# delete a task
alias tx="task $1 delete"
# mark a task as done
alias td="task $1 done"
# undo a task action
alias tu="task undo"
# leave contexts, see it all
alias tn="task context none"

